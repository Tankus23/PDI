        form {
            position: relative;
            width: 300px;
            margin: 0 auto;
        }

        input {
            width: 100%;
            height: 42px;
            padding-left: 10px;
            border: 2px solid #666;
            border-radius: 5px;
            outline: none;
            background: #fff;
            color: #666C;
        }

        button {
            position: absolute;
            top: 0;
            right: 0px;
            width: 42px;
            height: 42px;
            border: none;
            background: #666;
            border-radius: 0 5px 5px 0;
            cursor: pointer;
        }

            button:before {
                content: "\f002";
                font-family: FontAwesome;
                font-size: 16px;
                color: #F9F0DA;
            }

        #center {
            top: 80%; /* Отступ в процентах от верхнего края окна */
